<main>
  <div class="jumbotron jumbotron-fluid d-none d-md-block" style="background-image:url(<%= asset_path 'side-jumbotron.png' %>); height: 550px; background-position: center;">
    <div class="container" style="position: relative; top: 50%; transform: translateY(-50%);">
      <h1>お問い合わせ</h1>
    </div>
  </div>
  <div class="d-md-none my-5">
    <div class="container">
      <h1 style="font-size: 40px;">お問い合わせ</h1>
    </div>
  </div>
  <div class="container">
    <h2 class="text-center">確認画面</h2>
    <%=form_with model: @contact, url: contact_create_path, local: true do |f|%>
    <table class="table table-hover">
      <tbody>
        <tr>
          <th>件名</th>
          <td><%= @contact.title%></td>
          <%= f.hidden_field :title%>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @contact.email%></td>
          <%= f.hidden_field :email%>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td><%= @contact.content%></td>
          <%= f.hidden_field :content%>
        </tr>
      </tbody>
    </table>
      <div class="text-right">
        <%= f.submit "戻る", name: 'back',class: 'btn btn-primary btn-outline'%>
        <%= f.submit "送信", class: 'btn btn-primary btn-raised'%>
      </div>
    <%end%>
  </div>
</main>