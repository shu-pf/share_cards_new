<% if @license_group.errors.any? %>
<div class="alert alert-danger alert-dismissible fade show mb-0" role="alert">
  <% @license_group.errors.full_messages.each do |message| %>
    <%=message%><br>
  <%end%>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>
<main id='main'>
  <div class="container">
    <h2 class="my-3">新しいカードを作成</h2>
    <%=form_with model: @license_group, url: card_license_groups_path(@card), local: true do |f|%>
      <div class="form-group">
        <%= f.label "作成するカードの枚数" %>
        <%= f.text_field :number_of_licenses, class: "form-control", id: "number_of_licenses"%>
      </div>
      <div class="text-right">
        <%= f.submit "作成する",class: 'btn btn-primary btn-raised',id: 'licence_group_submit'%>
      </div>
    <%end%>
  </div>
</main>
<div class="text-center d-none" id="spinner">
  <div class="spinner-border my-5" role="status">
    <span class="sr-only">Loading...</span>
  </div>
  <h3>現在シリアルコードを発行しています。</h3>
  <h4 class="mb-5">そのままでお待ち下さい</h4>
</div>
<%= javascript_pack_tag 'licence_group', 'data-turbolinks-track': 'reload' %>